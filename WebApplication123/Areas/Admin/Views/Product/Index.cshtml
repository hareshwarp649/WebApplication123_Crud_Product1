 @model WebApplication123.ViewModel.ProductVM 
 @{ 
     ViewData["Title"] = "Index"; 
 } 

 @if (TempData["success"] != null) 
 {

    <script>
        setTimeout(() => {
            Swal.fire({
                title: "Success!",
                text: "@TempData["success"]",
                icon: "success",
                confirmButtonText: "OK"
            });
        }, 500);
    </script>
 }

@* <h1>List Of Categories</h1> *@
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary"> Product </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle"></i>&nbsp; Create New Product </a>

        </div>
    </div>
</div>

<table id="myTable" class=" table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
           
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Price</th>
            <th> Category </th>
            <th> Action </th>

        </tr>

    </thead>
</table>

    @section scripts {
        
        <script src="~/js/JavaScript.js"></script>


    }





