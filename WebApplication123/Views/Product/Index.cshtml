 @model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>List Of Products </h1>
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primry"> Product </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Product"><i class="bi bi-plus-circle"></i>&nbsp; Create New Product </a>

        </div>
    </div>
</div>
<table class=" table table-borderes table-striped" style="width:100%">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(Model => Model.Id)</th>
            <th> @Html.DisplayNameFor(Model => Model.Name)</th>
            <th> @Html.DisplayNameFor(Model => Model.Categories.Name)</th>
            
            <th> Action </th>
        </tr>

    </thead>
    <tbody>
        @if(Model !=null && Model.Any())
        {
          @foreach (var item in Model)
           {
            <tr>
                <td>
                    @Html.DisplayFor(Model => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(Model=>item.Name)
                </td>
                <td>
                        @Html.DisplayFor(Model => item.Categories.Name)
                </td>
                
                <td role="group">
                    <a asp-action="Edit" asp-controller="product" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="product" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
           }
        }
        else
        {
            <tr>
                <td colspan="5">
                    <div>
                        Product not available not in database
                    </div>
                </td>
            </tr>
        }
    </tbody>


</table>

