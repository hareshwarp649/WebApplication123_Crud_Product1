@model Product
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<form asp-action="Edit">
	<input type="hidden" asp-for="Id" />
	<div class="border p-3 mt-4">
		<div class="row pb-3">
			<h2 class="text-primary"> Delete Product </h2>
			<hr />
		</div>


		<div class="row mb-3">
			<label asp-for="Id" class="form-control"></label>
			<input asp-for="Id" class="form-control" readonly/>
			<span asp-validation-for="Id" class="text-danger"></span>

		</div>
		<div class="row mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" readonly/>
			<span asp-validation-for="Name" class="text-danger"></span>

		</div>
		<div class="row mb-3">
			<label class="form-control"> Category </label>
			@* <input asp-for="Categories" class="form-control" /> *@
			<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" disabled>
				<option>--Select Category--</option>
			</select>
		</div>
		
		
		<button class=" btn btn-danger" type="submit"> Delete </button>
	</div>
	<a asp-action="Index" asp-controller="category"> Back To List </a>

</form>